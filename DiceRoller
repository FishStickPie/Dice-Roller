import java.util.Scanner;
import java.util.Random;

public class DiceRoller
{
    public static void main(String[] arg) {
        //instantiates scanner and random classes
        Scanner roll = new Scanner(System.in);
        Random random = new Random();
        
        //dice variables
        int diceSides;
        int i = 1;
        int min = 1;
        int max;
        String rollDice;
        int diceAnswer;
        
        //welcome menu and
        System.out.println("Welcome to the dice roller. This program will roll a dice and print the output.");
        
        //user input to decide how many sides the dice has
        System.out.println("Type a number above 3 for the number of sides the dice has:");
        diceSides = roll.nextInt();
        //checks whether the user input is valid (above 3)
        while (diceSides <= 3) {
            System.out.println("Invalid input. Please input again");
            diceSides = roll.nextInt();
        }
        max = diceSides;
        
        //typing roll will start the dice rolling section
        System.out.println("Type roll to roll the dice. Type end or stop to terminate the program");
        rollDice = roll.nextLine();
        
        //the while loop is forever and allows for the code to be repeated until the user types end
        while (i > 0) {
            //the user will reinput roll, end, or stop
            rollDice = roll.nextLine();
            
            if (rollDice.equals("roll")) {
                //gives a random number between min (1) and max (user input/the number of sides on the dice) and prints the value
                diceAnswer = random.nextInt(max - min + 1) + min;
                System.out.println(diceAnswer);
            } else if (rollDice.equals("end") || rollDice.equals("stop")) {
                //terminate the program
                System.exit(0);
            } else {
                //if the input is none of the above, print invalid input
                System.out.println("Invalid input");
            }
        }
    }
}
